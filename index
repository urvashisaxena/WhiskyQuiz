            <p id="result-description"></p>
            <button class="restart-btn" id="restart-btn">Take the Quiz Again</button>
        </div>
    </div>

    <script>
        const questions = [
            {
                question: "How would you describe your approach to life?",
                options: [
                    { text: "Balanced and versatile - I adapt well to different situations", whisky: "glenfiddich" },
                    { text: "Bold and distinctive - I'm not afraid to stand out", whisky: "lagavulin" },
